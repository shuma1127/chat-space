.chat-main
  .main-header
    .main-header__left__box
      .main-header__left__box__current__group
        = @group.name
      .main-header__left__box__menber__list
        menber:
        .main-header__left__box__menber__list__menber
          - @group.group_users.each do |group_user|
            = group_user.user.name
    .main-header__right-box
      = link_to edit_group_path(@group), class: "edit__btn" do
        Edit
  .messages
    = render @messages 
